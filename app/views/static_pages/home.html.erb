<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

            <% @posts.each do |post| %>
              <div class="post-preview">
                  <a href="post.html"> <!-- @post acctualy. didnt working yet -->
                      <h2 class="post-title">
                          <%= post.title %>
                      </h2>
                      <h3 class="post-subtitle">
                          <%= post.text %>
                      </h3>
                  </a>
                  <p class="post-meta">Posted by <a href="#">Start Bootstrap</a>
                    <%= post.updated_at %> </p>
              </div>
              <hr>
            <% end %>

            <!-- Pager
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li> -->
            </ul>
        </div>
    </div>
